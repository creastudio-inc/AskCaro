
@{
    ViewData["Title"] = "Index";
}


<section class="login_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="login_info">
                    <h2 class="f_p f_700 f_size_40 t_color3 mb_20">Login</h2>
                    <p class="f_p f_400 f_size_15">Welcome! Please confirm that your are visiting <br><a href="#">https://www.saasland.com</a></p>
                    <form action="#" class="login-form mt_60">
                        <div class="form-group text_box">
                            <label class="f_p text_c f_400">User Name</label>
                            <input type="text" placeholder="Your Name">
                        </div>
                        <div class="form-group text_box">
                            <label class="f_p text_c f_400">Password</label>
                            <input type="password" placeholder="******">
                        </div>
                        <button type="submit" class="btn_three">Log in</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 d-flex align-items-center">
                <div class="login_img">
                    <img src="~/Caro/img/xlogin_img.png.pagespeed.ic.c3oCUJnViZ.png" alt="" data-pagespeed-url-hash="4105466920" onload="pagespeed.CriticalImages.checkImageForCriticality(this);">
                </div>
            </div>
        </div>
    </div>
</section>